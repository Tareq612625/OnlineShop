@using OnlineShop.Models
@model List<Products>
@{
    ViewData["Title"] = "Cart";
}

<h1>Your Cart</h1>
<br />
<div class="row">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Image</th>
                <th>Name</th>
                <th>Product Type</th>
                <th>Color</th>
                <th>Price</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td><img src="~/@item.Image" class="img-fluid" width="100px" height="75px"/></td>
                    <td>@item.Name</td>
                    <td>@item.ProductTypes.ProductType</td>
                    <td>@item.ProductColor</td>
                    <td>@item.Price</td>
                    <td>
                        <a asp-area="Customer" asp-action="Remove" asp-controller="Home" asp-route-id="@item.Id" class="btn btn-danger">
                            <i class="fa fa-trash-alt"></i>
                        </a>
                    </td>
                </tr>

            }
        </tbody>
    </table>
</div>
<div class="row">
    <div class="col-6">
        <button asp-area="Customer" asp-action="Index" asp-controller="Home" class="btn btn-info">Back to Home</button>
    </div>
    <div class="col-6 text-right">
        <label>Total Amount</label>
        <h5>@Model.Sum(c=>c.Price) /- BDT</h5>
        <a asp-area="Customer" asp-controller="Order" asp-action="CheckOut" class="btn btn-info">Process To Checkout</a>
    </div>
</div>
