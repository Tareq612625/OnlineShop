@using OnlineShop.Models;
@model IEnumerable<SpecialTags>
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-6">
        <h3 class="text-info">Special Tag list</h3>
    </div>
    <div class="text-right">
        <a asp-action="Create" class="btn btn-info">
            &nbsp;
            <i class="fas fa-plus-circle"></i>
            New Special Tag
        </a>
    </div>
</div>

<div>
    <table class="table table-striped broder">
        <tr class="table-info">
            <th>
                @Html.DisplayNameFor(expression: c => c.SpecialTag)
            </th>
            <th></th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.SpecialTag </td>
                <td>
                    <partial name="_ButtonPartial" model="item.Id" />
                </td>
            </tr>
        }
    </table>
</div>

@section scripts{
    <script src="//cdn.jsdelivr.net/npm/alertifyjs@1.13.1/build/alertify.min.js"></script>
    <script type="text/javascript">
        $(function(){
            var save = '@TempData["Save"]'
            if(save!='') {
                alertify.success(save);
            }
            var update = '@TempData["update"]'
            if(update!='') {
                alertify.success(update);
            }
            var del = '@TempData["delete"]'
            if (del!='') {
                alertify.error(del);
            }
        })
    </script>
}

